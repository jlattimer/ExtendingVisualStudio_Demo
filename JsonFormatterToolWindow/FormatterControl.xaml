<UserControl x:Class="JsonFormatterToolWindow.FormatterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Background="{DynamicResource VsBrush.Window}"
             Foreground="{DynamicResource VsBrush.WindowText}"
             mc:Ignorable="d"
             d:DesignHeight="360" d:DesignWidth="900"
             Name="MyToolWindow">
	<Grid>
		<StackPanel Orientation="Vertical">
			<TextBlock Margin="10" HorizontalAlignment="Center">JSON Formatter</TextBlock>
			<StackPanel Orientation="Horizontal">
				<TextBox x:Name="Input" Height="300" Width="360" Margin="20,0,20,0"></TextBox>
				<Button x:Name="Format" Height="25" Width="100" Click="Format_Click">Format</Button>
				<TextBox x:Name="Output" Height="300" Width="360" Margin="20,0,20,0"></TextBox>
			</StackPanel>
		</StackPanel>
	</Grid>
</UserControl>
